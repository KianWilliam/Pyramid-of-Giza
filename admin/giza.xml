<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" version="3.x" method="upgrade">
    <identifier>com:giza</identifier>
    <name>Giza</name>
    <creationDate>July 2016</creationDate>
    <author>Kian William Nowrouzian</author>
	<copyright>Copyright (C) 2016 </copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>mezmer121@gmail.com</authorEmail>
	<authorUrl>http://www.myextenstions.lord121.ir</authorUrl>
    <version>1.0.0</version>	
	<description><![CDATA[<div style="color:#fff; background-color:#f015d9; padding:5px;">Welcome To Pyramid of Giza! All Pharoas tortured humans, hope this giza gives joy and pleasure to this generation of humans.</div>]]></description>
	
	<install>
		<sql>
            <file charset="utf8" driver="mysql">sql/install.sql</file>
        </sql>
    </install>
	
	<uninstall>
		<sql>
            <file charset="utf8" driver="mysql">sql/uninstall.sql</file>
        </sql>
    </uninstall>
	
	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_giza.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.com_giza.sys.ini</language>
	</languages>
	
	<media destination="com_giza" folder="media">
		<filename>index.html</filename>
		<filename>icon-16-pyramid.png</filename>
		<folder>cache</folder>		
	</media>
	
	<files folder="site">
		<filename>index.html</filename>
		<filename>controller.php</filename>
		<filename>giza.php</filename>
		<filename>router.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>assets</folder>
		<folder>language</folder>
		<folder>helpers</folder>
	</files>
	
	<administration>
	
		  <menu img="media/com_giza/icon-16-pyramid.png" link="option=com_giza">COM_GIZA</menu>
		  
		  <files folder="admin">
		    <filename>giza.xml</filename>
        	<filename>giza.php</filename>
            <filename>controller.php</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
            <folder>models</folder>
			<folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
		
		<languages>
		   <language tag="en-GB">language/en-GB/en-GB.com_giza.ini</language>
		    <language tag="en-GB">language/en-GB/en-GB.com_giza.sys.ini</language>
	    </languages>	
		
	</administration>	
</extension>